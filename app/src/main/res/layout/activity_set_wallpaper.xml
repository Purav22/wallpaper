<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setWallpaper">


    <ImageView
        android:id="@+id/finalImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.7"
        android:backgroundTint="#AEABAB"
        android:clickable="true"
        android:src="@drawable/information"
        app:backgroundTint="#AEABAB"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/heartIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.7"
        android:backgroundTint="#AEABAB"
        android:clickable="true"
        android:gravity="center"
        android:src="@drawable/heart"
        app:backgroundTint="#AEABAB"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/downloadIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#AEABAB"
        android:clickable="true"
        android:alpha="0.7"
        android:src="@drawable/download"
        app:backgroundTint="#AEABAB"
        app:fabSize="normal"
        app:maxImageSize="35dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#AEABAB"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.7"
        android:gravity="center"
        android:src="@drawable/plus"
        app:backgroundTint="#AEABAB"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeScreenIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lockScreenIcon"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.7"
        android:backgroundTint="#AEABAB"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/smartphone"
        android:visibility="invisible"

        app:backgroundTint="#AEABAB"
        app:fabSize="mini"
        app:maxImageSize="35dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lockScreenIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bothScreenIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#AEABAB"
        android:focusable="true"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:src="@drawable/smartphone"
        app:backgroundTint="#AEABAB"
        app:fabSize="mini"
        android:alpha="0.7"
        app:maxImageSize="35dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bothScreenIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plusIcon"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#AEABAB"
        android:focusable="true"
        android:visibility="invisible"
        android:src="@drawable/smartphone"
        app:backgroundTint="#AEABAB"
        app:fabSize="mini"
        android:alpha="0.7"
        app:maxImageSize="35dp" />

    <TextView
        android:id="@+id/homeScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lockScreenText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/textviewbg"
        android:fontFamily="@font/nunito"
        android:alpha="0.7"
        android:text="Home Screen"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lockScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bothScreenText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:background="@drawable/textviewbg"
        android:fontFamily="@font/nunito"
        android:alpha="0.7"
        android:text="Lock Screen"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bothScreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="102dp"
        android:padding="5dp"
        android:background="@drawable/textviewbg"
        android:fontFamily="@font/nunito"
        android:alpha="0.7"

        android:text="Home &amp; LockScreen"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="invisible" />



</RelativeLayout>